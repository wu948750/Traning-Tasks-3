<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-3">

      <h1>Editing Book</h1>

　　　<div class="error">
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
        <div>
          <p>Title</p>
          <%= f.text_field :title, class: 'form-control', size: 25 %>
        </div><br>
        <div>
          <p>Opinion</p>
          <%= f.text_area :body, class: 'form-control', size: "25x2" %>
        </div><br>
        <div><%= f.submit "Update Book", class: "btn btn-success"%></div>
      <% end %>
      <div><br>
        <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>